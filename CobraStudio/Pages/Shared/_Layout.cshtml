<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CobraStudio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("script", required: false)
</head>

<body>
    <header>
        <nav class="red navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #F42736;">
            <div class="container">
                <img class="logo" src="https://media.licdn.com/dms/image/C4D0BAQEAgLPN9932-Q/company-logo_200_200/0/1645923618935?e=2147483647&v=beta&t=G-UUOYoL-ru5VJ2uN24BcKhMszA9wHsDmufhTFmI0ck" style="width:50px" />
                <a class="marca" asp-area="" asp-page="/Index">Cobra Studio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 menu">
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-page="/Areas/Index">Áreas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-page="/Empleados/Index">Empleados</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-page="/EmpleadoHabilidades/Index">Habilidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black" asp-area="" asp-page="/Organizacion/Index">Organización</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CobraStudio - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>

<style>
    .logo {
        width: 50px;
    }

    .red {
        background-color: #F42736;
    }

    .marca {
        color: white;
        font-size: 18px;
        font-weight: 700;
    }

    .menu {
        padding-left:20px;
        color: black;
    }

    .text-black {
        color: black;
        font-weight: 500;
    }
</style>
