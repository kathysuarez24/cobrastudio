@page
@model CobraStudio.Pages.Areas.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4>Áreas</h4>

<p>
    <a asp-page="Create">Registrar Área</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Nombre </th>
            <th> Descripción </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Area) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.IdArea">Ver</a> |
                <a asp-page="./Edit" asp-route-id="@item.IdArea">Editar</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdArea">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
