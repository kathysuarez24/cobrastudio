@page
@model CobraStudio.Pages.Areas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Área</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Area.IdArea" />
            <div class="form-group">
                <label asp-for="Area.Nombre" class="control-label">Nombre</label>
                <input asp-for="Area.Nombre" class="form-control" />
                <span asp-validation-for="Area.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area.Descripcion" class="control-label">Descripción</label>
                <input asp-for="Area.Descripcion" class="form-control" />
                <span asp-validation-for="Area.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
